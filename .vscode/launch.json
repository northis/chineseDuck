{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PowerShell Launch Current File",
      "type": "PowerShell",
      "request": "launch",
      "script": "${file}",
      "cwd": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "build-dev-run-dbg"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "DB scripts run",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "db-dev"],
      "port": 9229
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test-dbg"],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}\\build\\server.js"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "sourceMaps": true,
      "port": 9222,
      "webRoot": "${workspaceRoot}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000/index.html",
      "webRoot": "${workspaceRoot}/src/client",
      "sourceMaps": true
    }
  ]
}
