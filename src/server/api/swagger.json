            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "description": "New translation",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Word not found"
          }
        },
        "security": [
          {
            "cookieAuth": ["write"]
          }
        ]
      }
    },
    "/word/{wordId}/score": {
      "put": {
        "tags": ["word"],
        "summary": "Update user's score for word",
        "operationId": "scoreWord",
        "parameters": [
          {
            "name": "wordId",
            "in": "path",
            "description": "Word id to reaname",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "description": "Score object that needs to be updated in the word",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Score"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Score updated"
          },
          "201": {
            "description": "Score created"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Word not found"
          }
        },
        "security": [
          {
            "cookieAuth": ["admin"]
          }
        ]
      }
    },
    "/word/{wordId}": {
      "get": {
        "tags": ["word"],
        "description": "Get word by id",
