          "403": {
            "description": "You have no rights to do this"
          },
          "404": {
            "description": "Word is not found"
          }
        },
        "security": [
          {
            "cookieAuth": ["write"]
          }
        ]
      }
    },
    "/word/user/{userId}/search/{wordEntry}": {
      "get": {
