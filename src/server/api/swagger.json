        "summary": "Get words by word or character for user",
        "description": "Get words by wordEntry for user",
        "operationId": "getWordsByUser",
        "parameters": [
          {
            "name": "wordEntry",
            "in": "path",
            "description": "Word entry",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
