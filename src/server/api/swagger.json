              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiUser"
                }
              }
            }
          },
          "400": {
            "description": "Invalid phone supplied"
          },
          "404": {
            "description": "Phone number is not registred"
          }
        },
        "security": [
          {
            "cookieAuth": ["read"]
          }
        ]
      }
