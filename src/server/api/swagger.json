  "servers": [
    {
      "url": "https://udd3r.com/api/v1/"
    }
  ],
  "security": [
    {
      "cookieAuth": ["read", "write", "admin"]
    }
  ],
  "tags": [
    {
      "name": "word",
      "description": "Dictionary item"
    },
    {
      "name": "user",
      "description": "Operations about user"
    },
    {
      "name": "service",
      "description": "System service operations"
    },
    {
      "name": "folder",
      "description": "User folder for words"
    }
