            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Invalid auth data"
          },
          "404": {
            "description": "User not found"
          }
        },
        "security": [
          {
            "cookieAuth": ["read"]
          }
        ]
      },
      "post": {
        "tags": ["user"],
        "summary": "Create user",
        "operationId": "createUser",
        "requestBody": {
          "description": "Created user object",
