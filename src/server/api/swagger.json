        "requestBody": {
          "description": "The user phone for auth",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Auth code sent, hash in object",
